
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table>
        <tr>
            <th>Enter Username</th>
            <td><input type="text" name="name" /></td>
        </tr>
        <tr>
            <th>Enter Password</th>
            <td><input type="password" name="pwd" /></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Login" /></td>
        </tr>
    </table>
}

